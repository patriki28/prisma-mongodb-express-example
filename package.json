{
  "name": "prisma-mongodb-express-example",
  "version": "1.0.0",
  "description": "A simple REST API CRUD.",
  "main": "./src/index.ts",
  "scripts": {
    "build": "npm run prisma:generate && tsc --build",
    "dev": "tsx watch -r tsconfig-paths/register src/index.ts",
    "test": "jest --runInBand --no-cache --forceExit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"./src/**/*.+(js|ts|json)\"",
    "format:check": "prettier --check \"./src/**/*.+(js|ts|json)\"",
    "prisma:generate": "npx prisma generate",
    "prisma:dbpush": "npx prisma db push",
    "commit": "cz",
    "prepare": "husky"
  },
  "keywords": [
    "Prisma",
    "MongoDB",
    "Swagger",
    "Zod",
    "ExpressJS",
    "NodeJS",
    "TypeScript",
    "Eslint",
    "Prettier",
    "Husky",
    "Commitizen"
  ],
  "author": "Patrick Diesta",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "npm run commitlint $1",
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run format",
      "npm run lint:fix",
      "npm run lint",
      "npm run test"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "@types/supertest": "^6.0.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^7.4.1",
    "jest-mock-extended": "^4.0.0-beta1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
